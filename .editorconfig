
# This file is for unifying the coding style for different editors and IDEs
# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
charset = utf-8
tab_width = 4
indent_size = 4
indent_style = space

[Makefile*]
indent_style = tab

[*.yml]
indent_size = 2
